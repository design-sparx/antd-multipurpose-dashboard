# API Configuration
# Set to 'true' to use mock data, 'false' to use real API endpoints
VITE_USE_MOCK_DATA=true

# Production API Base URL (used when VITE_USE_MOCK_DATA=false)
# IMPORTANT: This should be ONLY the host URL without any path (no trailing slash)
# The application will automatically append /api/v1 for all API requests
#
# ✅ CORRECT Examples:
#   - Local development: http://localhost:5000
#   - Local development: http://localhost:5080
#   - Production: https://api.yourdomain.com
#
# ❌ INCORRECT Examples (DO NOT include /api/v1 in the base URL):
#   - http://localhost:5000/api/v1  ❌ Wrong! Will cause duplicate paths
#   - https://api.yourdomain.com/api/v1  ❌ Wrong! Will cause duplicate paths
VITE_API_BASE_URL=http://localhost:5000

# Firebase Configuration (existing)
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_auth_domain
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id
